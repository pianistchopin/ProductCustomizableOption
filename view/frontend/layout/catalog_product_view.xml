<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceContainer name="content">
            <referenceContainer name="product.info.main">
                <referenceContainer name="product.info">
                    <referenceContainer name="product.info.form.options">
                        <referenceContainer name="product.info.options.wrapper">
                            <referenceBlock name="product.info.options">
                                <action method="setTemplate">
                                    <argument name="template"  xsi:type="string">
                                        TenxEngineer_ProductCustomizableOption::catalog/product/view/options.phtml
                                    </argument>
                                </action>
                            </referenceBlock>
                        </referenceContainer>
                    </referenceContainer>
                </referenceContainer>
            </referenceContainer>
        </referenceContainer>
    </body>
</page>
